{
  "id": "openclaw-rss-feeds",
  "name": "RSS Feeds",
  "description": "RSS/Atom feed digest with optional CVE enrichment, Ghost CMS drafts, and channel notifications",
  "version": "0.1.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "feeds": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "url": { "type": "string" },
            "keywords": { "type": "array", "items": { "type": "string" } },
            "cvssThreshold": { "type": "number", "default": 6.5 },
            "enrichCve": { "type": "boolean", "default": false }
          },
          "required": ["id", "name", "url"]
        }
      },
      "schedule": { "type": "string", "description": "Cron expression, e.g. '0 9 1 * *'" },
      "output": {
        "type": "object",
        "properties": {
          "ghostDraft": { "type": "boolean", "default": false },
          "notify": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "required": ["feeds"]
  }
}
